.wx-alert-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
}

.wx-alert-dialog {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.wx-alert-dialog-title {
    font-size: 18px;
    padding: 15px 15px 5px;
}

.wx-alert-dialog-content {
    padding: 15px 15px 5px;
    min-height: 40px;
    font-size: 16px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}

.wx-alert-dialog-footer {
    display: flex;
    align-items: center;
    position: relative;
    line-height: 45px;
    font-size: 17px;
}

.wx-alert-dialog-footer::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.wx-alert-dialog-btn {
    display: block;
    flex: 1;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    position: relative;
    background-color: #ffffff;
    border: 0rpx;
}

.wx-alert-dialog-footer .wx-alert-dialog-btn:nth-of-type(1) {
    color: #353535;
}

.wx-alert-dialog-footer .wx-alert-dialog-btn:nth-of-type(2) {
    color: #3CC51F;
}

.wx-alert-dialog-footer .wx-alert-dialog-btn:nth-of-type(2):after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}